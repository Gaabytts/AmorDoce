@model AmorDoce.Models.Produtos

@{
    ViewBag.Title = "Cadastro de Doces";
}




@using (Html.BeginForm("Cadastro", "Produtos", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
<div class="container">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-9 col-lg-9 col-xl-9 mx-auto">
            <div class="form-horizontal mt-5">
                <h4>Cadastro de Doces</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form>
                <div class="form-group">
                    @Html.LabelFor(model => model.nome_produto, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nome_produto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nome_produto, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.descricao_produto, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.descricao_produto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.descricao_produto, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.preco_produto, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.preco_produto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.preco_produto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.validade_produto, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.validade_produto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.validade_produto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.imagem, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.imagem, new { type = "file" })
                        <br />
                        @Html.ValidationMessageFor(model => model.imagem, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-8">
                    <input type="submit" value="Cadastrar doce" class="btn btn-pink" />
                </div>
            </form>
            </div>
        </div>
    </div>
</div>
   
        }



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
