@model IEnumerable<AmorDoce.Models.Produtos>

@{
    ViewBag.Title = "Consultar";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome_produto)
        </th>      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome_produto)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { item.id_produto }) |
            @Html.ActionLink("Excluir", "Excluir", new { item.id_produto })
        </td>
    </tr>
}

</table>
