<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    @Html.ActionLink("Amor Doce", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Cadastrar doce", "Cadastro", "Produtos", new { area = "" }, new { @class = "nav-link" })  
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Consultar doces", "Consultar", "Produtos", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>

    <div class="">
        @RenderBody()

    </div>
  
    <footer class="footer mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12 py-5">
                    <div class="mb-5 text-center">
                        <a class="text-center">
                            <i class="fab fa-facebook-f fa-lg mr-md-5 mr-3 fa-2x"> </i>
                        </a>
                        <a>
                            <i class="fab fa-twitter fa-lg mr-md-5 mr-3 fa-2x"> </i>
                        </a>
                        <a>
                            <i class="fab fa-google-plus-g fa-lg mr-md-5 mr-3 fa-2x"> </i>
                        </a>  
                        <a>
                            <i class="fab fa-linkedin-in fa-lg mr-md-5 mr-3 fa-2x"> </i>
                        </a>
                        <a>
                            <i class="fab fa-instagram fa-lg mr-md-5 mr-3 fa-2x"> </i>
                        </a>
                        <a>
                            <i class="fab fa-pinterest fa-lg fa-2x"> </i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-copyright text-center py-3">
            <p>© 2020 Copyright: Amor Doce - Todos os direitos reservados</p>
        </div>
     
    </footer>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
